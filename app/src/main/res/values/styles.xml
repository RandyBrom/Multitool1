<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>
    <style name="BasicImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="EditTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:enabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:inputType">text</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="BaseText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>

    </style>




</resources>