<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.person.PersonFragment">

    <ImageButton
        android:id="@+id/profileButtonImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/person_btn"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        style="@style/MainImageButton"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/rename_user_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/person_btn"
        android:scaleType="fitXY"
        style="@style/MainImageButton"
        tools:src="@drawable/ic_rename" />

    <TextView
        android:id="@+id/textPerson"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="120dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        style="@style/TextViewStyle"
        android:text="@string/person_btn" />

    <EditText
        android:id="@+id/editTextPerson"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:textSize="14sp" />

</FrameLayout>